---
const { data } = Astro.props;
---

<a href=`/products/${data.slug}`>
  <div class="grid_4_1">
    <img src=`${data.img[0]}` alt="Bareen product" />
    <img src=`${data.img[1]}` alt="Bareen product" />
    <img src=`${data.img[2]}` alt="Bareen product" />
    <img src=`${data.img[3]}` alt="Bareen product" />
  </div>
</a>

<style>
  .grid_4_1 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    width: 100%;
    max-width: 1200px;
    padding: 2rem;
    margin: 0 auto;
    margin-bottom: 30px;
  }

  @media (min-width: 1200px) {
    .grid_4_1 {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
