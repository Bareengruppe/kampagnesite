---
const { data } = Astro.props;
---

<a href={`/products/${data.slug}`} class="card">
  <div class="grid_4_1">
    <div class="card-item">
      <img src={`${data.img[0]}`} alt="Bareen product" />
      <div class="overlay">
        <div class="overlay-content">
          <p class="collection">{data.collection}</p>
          <p class="product-name">{data.name}</p>
        </div>
      </div>
    </div>
    <div class="card-item">
      <img src={`${data.img[1]}`} alt="Bareen product" />
      <div class="overlay">
        <div class="overlay-content">
          <p class="collection">{data.collection}</p>
          <p class="product-name">{data.name}</p>
        </div>
      </div>
    </div>
    <div class="card-item">
      <img src={`${data.img[2]}`} alt="Bareen product" />
      <div class="overlay">
        <div class="overlay-content">
          <p class="collection">{data.collection}</p>
          <p class="product-name">{data.name}</p>
        </div>
      </div>
    </div>
    <div class="card-item">
      <img src={`${data.img[3]}`} alt="Bareen product" />
      <div class="overlay">
        <div class="overlay-content">
          <p class="collection">{data.collection}</p>
          <p class="product-name">{data.name}</p>
        </div>
      </div>
    </div>
  </div>
</a>

<style>
  .grid_4_1 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    margin-bottom: 30px;
  }

  .card-item {
    position: relative;
    overflow: hidden;
  }

  .card-item img {
    width: 100%;
    display: block;
    transition: transform 0.3s ease;
  }

  .card-item:hover img {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .card-item:hover .overlay {
    opacity: 1;
  }

  .overlay-content {
    color: white;
    text-align: center;
    padding: 10px;
  }

  .collection {
    font-size: 1rem;
    font-weight: bold;
  }

  .product-name {
    font-size: 0.9rem;
  }

  @media (min-width: 1200px) {
    .grid_4_1 {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
